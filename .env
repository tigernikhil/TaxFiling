# Backend Environment Variables Template
# Copy this to .env and fill in your values

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/cleartax
# For MongoDB Atlas cloud:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cleartax

# JWT
JWT_SECRET=your_super_secret_key_change_this_in_production_min_32_characters_long_for_security
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=./uploads

# Email (Optional - for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:3000

# API Keys (Optional - for integrations)
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
DOCUMENT_API_KEY=your_document_api_key